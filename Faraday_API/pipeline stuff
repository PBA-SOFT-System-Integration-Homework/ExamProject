
// CHANGE IN faraday_api.yml (replace current build command)
docker build --build-arg MAVEN_REPO_USER --build-arg MAVEN_REPO_PASSWORD --build-arg MAVEN_REPO_URL -t jeff/faradayapi .

// ADD TO DOCKER FILE :
ARG MAVEN_REPO_USER
ARG MAVEN_REPO_PASSWORD
ARG MAVEN_REPO_URL

ENV MAVEN_REPO_USER=$MAVEN_REPO_USER
ENV MAVEN_REPO_PASSWORD=$MAVEN_REPO_PASSWORD
ENV MAVEN_REPO_URL=$MAVEN_REPO_URL


// ADD TO MAVEN PART OF Dockerfile

mvn -s .m2/settings.xml --batch-mode --errors --fail-at-end compile
mvn clean package -U
